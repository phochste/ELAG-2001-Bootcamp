<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>FlipServlet</servlet-name>
        <servlet-class>BitFlipper.FlipServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>default-myfiles</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MD5Servlet</servlet-name>
        <servlet-class>BitFlipper.MD5Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TruncateServlet</servlet-name>
        <servlet-class>BitFlipper.TruncateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HexviewerServlet</servlet-name>
        <servlet-class>BitFlipper.HexviewerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BagitServlet</servlet-name>
        <servlet-class>BitFlipper.BagitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlipServlet</servlet-name>
        <url-pattern>/flip</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default-myfiles</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MD5Servlet</servlet-name>
        <url-pattern>/md5</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TruncateServlet</servlet-name>
        <url-pattern>/truncate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HexviewerServlet</servlet-name>
        <url-pattern>/hexviewer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BagitServlet</servlet-name>
        <url-pattern>/bagit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
